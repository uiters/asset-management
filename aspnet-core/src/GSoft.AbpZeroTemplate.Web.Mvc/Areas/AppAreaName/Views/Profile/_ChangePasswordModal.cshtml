@using GSoft.AbpZeroTemplate.Web.Areas.AppAreaName.Models.Common.Modals
@Html.Partial("~/Areas/AppAreaName/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("ChangePassword")))

<div class="modal-body">
    <form name="ChangePasswordModalForm" class="m-form">
        <div class="form-group">
            <label for="CurrentPassword">@L("CurrentPassword")</label>
            <input id="CurrentPassword" type="password" autocomplete="off" name="CurrentPassword" class="form-control" required maxlength="@GSoft.AbpZeroTemplate.Authorization.Users.User.MaxPlainPasswordLength">
            <span class="m-form__help">@Html.Raw(L("PasswordChangeDontRememberMessage", "<a href=\"" + Url.Action("ForgotPassword", "Account", new {area = ""}) + "\">" + L("ClickHere") + "</a>"))</span>
        </div>
        <div class="form-group">
            <label for="NewPassword">@L("NewPassword")</label>
            <input id="NewPassword" type="password" autocomplete="off" name="NewPassword" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="NewPasswordRepeat">@L("NewPasswordRepeat")</label>
            <input id="NewPasswordRepeat" type="password" autocomplete="off" name="NewPasswordRepeat" class="form-control" required equalto="#NewPassword">
        </div>
    </form>
</div>

@Html.Partial("~/Areas/AppAreaName/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
